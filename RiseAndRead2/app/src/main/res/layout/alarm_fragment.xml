<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jackgoza.riseandread.fragments.AlarmFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray">

        <TimePicker
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:amPmBackgroundColor="@android:color/black"
            android:headerBackground="@android:color/black"
            android:numbersBackgroundColor="@android:color/darker_gray" />

        <ToggleButton
            android:text="Alarm On/Off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alarmToggle"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/timePicker"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="152dp"
            app:layout_constraintLeft_toLeftOf="parent" />
            android:onClick="onButtonPressed"
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
